{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "ES6",
    "types": ["node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
